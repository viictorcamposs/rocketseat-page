{% extends "layout.njk" %}

{% block head %}
  <title>Bootcamp</title>
  <link rel="stylesheet" href="/bootcamp-page.css">
{% endblock %}
{% block header %}
  <img src="https://skylab.rocketseat.com.br/static/media/logo.0ae02df1.svg" alt="logo">
  <div class="links">
    <a href="/">Rocketseat</a>
    <a href="/bootcamp.page" class="selected-page">Bootcamp</a>
    <a href="https://discordapp.com/invite/gCRAFhc" target="_blank">Discord</a>
    <a class="contato">Contato</a>
  </div>
{% endblock %}
{% block content %}
  <section class="cards">
    {% for item in items %}
      <div class="card {{ item.color }}" id="{{ item.name }}">
        <div class="inside-card">
          <div class="card-top">
            <span class="{{ item.name }}">{{ item.number }}</span>
          </div>
          <div class="card-content">
            <img src="{{ item.image }}" alt="Curso {{ item.name }}">
          </div>
          <div class="card-info">
            <p class="paragraph"><strong class="{{ item.name }}">{{ item.strongDescription }}</strong> {{ item.description }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}
{% block modal %}
  <div class="modal-overlay">
    <div class="buttons">
      <a class="fullscreen">
        <img src="/open_in_full-white-24dp.svg" alt="full screen">
      </a>
      <a class="close-modal">
        <img src="/close-white-24dp.svg" alt="close">
      </a>
    </div>
    <div class="modal">
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
{% endblock %}
{% block script %}
  <script src="/bootcamp-page.js"></script>
{% endblock %}